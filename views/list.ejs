<%- include("header"); -%>

    <div class="box" id="heading">
        <h1><%= listName %> </h1>
    </div>

    <div class="box">
      <% for(var i = 0; i< newListItems.length; i++){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name = "checkboxItem" value = "<%= newListItems[i]._id %>" onChange="this.form.submit()">
            <p><%=newListItems[i].name%></p>
          </div>
        </form>
       

      <% } %>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" class="item" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value = "<%= listName %>" >+</button>
      </form>
    </div>

<%- include("footer"); -%>
